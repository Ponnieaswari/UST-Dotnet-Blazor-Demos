@page "/products"
@inject HttpClient Http

<h3 class="mb-4 text-center">Product Gallery</h3>

@if (products == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary"></div>
        <p class="mt-2">Loading products...</p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var prod in products)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card shadow-sm h-100 product-card">
                    <img src="@prod.Thumbnail"
                         class="card-img-top"
                         alt="@prod.Title" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">
                            @prod.Title
                        </h5>

                        <p class="card-text text-muted small">
                            @prod.Category
                        </p>

                        <p class="card-text flex-grow-1">
                            @prod.Description
                        </p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold text-success">
                                $ @prod.Price
                            </span>
                            <button class="btn btn-sm btn-primary">
                                Buy Now
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}



@code {

    List<Product> products;

    protected override async Task OnInitializedAsync()
    {
        // Http.GetFromJsonAsync("https://dummyjson.com/products");

        var result = await Http.GetFromJsonAsync<ProductResult>("https://dummyjson.com/products");

        products = result?.Products;

        foreach (var prod in products)
        {
            Console.WriteLine($"Product ID: {prod.Id}, Title: {prod.Title}, Price: {prod.Price}");
        }
    }

}
